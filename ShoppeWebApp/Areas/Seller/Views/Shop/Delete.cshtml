@model ShoppeWebApp.ViewModels.Seller.ShopViewModel
@{
    Layout = "~/Areas/Seller/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Xác nhận xóa cửa hàng";
}

<!DOCTYPE html>
<html>
<head>
    <title>Xác nhận xóa cửa hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <!-- Tiêu đề -->
        <div class="text-center mb-4">
            <h2 class="fw-bold text-white p-3" style="background-color: #dc3545; border-radius: 10px;">
                Xác nhận xóa cửa hàng
            </h2>
        </div>

        <!-- Hiển thị thông báo lỗi hoặc cảnh báo -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div class="alert alert-warning text-center" role="alert">
                @TempData["WarningMessage"]
            </div>
        }

        <!-- Thông tin cửa hàng -->
        <div class="p-4 border border-danger rounded" style="background-color: #fdfdfd;">
            <div class="row mb-3">
                <!-- Ảnh cửa hàng -->
                <div class="col-md-4 text-center">
                    <label class="form-label fw-bold">Ảnh cửa hàng</label>
                    <div>
                        <img src="@Model.UrlAnh" alt="Ảnh cửa hàng" class="img-thumbnail mb-3" style="width: 200px; height: 200px; object-fit: cover;" />
                    </div>
                </div>
                <!-- Thông tin chi tiết -->
                <div class="col-md-8">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên cửa hàng</label>
                        <input type="text" class="form-control" value="@Model.TenCuaHang" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Số điện thoại</label>
                        <input type="text" class="form-control" value="@Model.Sdt" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Địa chỉ</label>
                        <input type="text" class="form-control" value="@Model.DiaChi" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Mô tả</label>
                        <textarea class="form-control" readonly style="background-color: #e9ecef; cursor: not-allowed;">@Model.MoTa</textarea>
                    </div>
                </div>
            </div>

            <!-- Nút xác nhận và hủy -->
            <div class="text-end">
                <form asp-area="Seller" asp-controller="Shop" asp-action="DeleteConfirmed" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.IdCuaHang" />
                    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                </form>
                <a asp-area="Seller" asp-controller="Shop" asp-action="Index" class="btn btn-secondary">Hủy</a>
            </div>
        </div>
    </div>
</body>
</html>