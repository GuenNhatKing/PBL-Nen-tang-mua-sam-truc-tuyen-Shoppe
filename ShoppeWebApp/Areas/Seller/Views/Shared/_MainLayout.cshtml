<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Shoppe Seller Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body class="d-flex flex-column" style="height: 100vh;">
    <!-- Wrapper toàn bộ trang -->
    <div class="container-fluid">
        <!-- Navbar or Header Section -->
        <div class="row bg-dark text-white py-2 align-items-center fixed-top" style="z-index: 1000;">
            <div class="col-md-10">
                <h4 class="ms-3">Shoppe - Kênh người bán</h4>
            </div>
            <div class="col-md-2 text-end">
                <form asp-area="Seller" asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-danger btn-sm me-3">Đăng xuất</button>
                </form>
            </div>
        </div>
        <hr class="my-0 border-light" style="height: 7px; border-color: #c98c1c;">
    </div>

    <!-- Bố cục chính với Sidebar và nội dung -->
    <div class="row flex-grow-1 pt-5">
        <!-- Sidebar Section -->
        <div class="col-md-2 bg-dark text-white vh-100 position-fixed">
            <h5 class="ms-3 mt-3">Chức năng</h5>
            <div class="d-flex flex-column align-items-start mt-4 px-3">
                <a asp-area="Seller" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                    <i class="fas fa-home"></i> Dashboard
                </a>
                <a asp-area="Seller" asp-controller="Shop" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                    <i class="fas fa-store"></i> Quản lý Cửa hàng
                </a>
                <a asp-area="Seller" asp-controller="Product" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                    <i class="fas fa-box"></i> Quản lý Sản phẩm
                </a>
                <a asp-area="Seller" asp-controller="Order" asp-action="Index" class="btn btn-outline-light w-100 mb-3 text-start">
                    <i class="fas fa-file-invoice"></i> Quản lý Đơn hàng
                </a>
            </div>
        </div>

        <!-- Main Content Section -->
        <div class="col-md-10 offset-md-2">
            <div class="container mt-4">
                @RenderBody()  <!-- Nội dung của các trang con sẽ hiển thị ở đây -->
            </div>
        </div>
    </div>

    <!-- Bootstrap JS & Other Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>