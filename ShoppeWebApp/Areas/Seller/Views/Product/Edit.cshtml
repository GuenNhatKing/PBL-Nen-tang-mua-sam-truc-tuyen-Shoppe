@model ShoppeWebApp.ViewModels.Seller.EditProductViewModel

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Areas/Seller/Views/Shared/_MainLayout.cshtml";
}

<div class="container mt-5">
    <!-- Tiêu đề -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-white p-3" style="background-color: #ffc107; border-radius: 10px;">
            Chỉnh sửa sản phẩm
        </h2>
    </div>

    <!-- Hiển thị thông báo thành công -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Form chỉnh sửa sản phẩm -->
    <div class="p-4 border border-warning rounded" style="background-color: #fdfdfd;">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row">
                <!-- Cột ảnh -->
                <div class="col-md-4 text-center">
                    <label class="form-label fw-bold">Ảnh sản phẩm</label>
                    <div>
                        <img src="@Model.UrlAnhHienTai" alt="Ảnh sản phẩm" class="img-thumbnail mb-3" style="width: 200px; height: 200px; object-fit: cover;" />
                    </div>
                    <input type="file" class="form-control" asp-for="UrlAnhMoi" />
                    <span asp-validation-for="UrlAnhMoi" class="text-danger"></span>
                </div>

                <!-- Cột thông tin -->
                <div class="col-md-8">
                    <div class="mb-3">
                        <label asp-for="TenSanPham" class="form-label fw-bold">Tên sản phẩm</label>
                        <input asp-for="TenSanPham" class="form-control" />
                        <span asp-validation-for="TenSanPham" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="IdDanhMuc" class="form-label fw-bold">Danh mục</label>
                        <select asp-for="IdDanhMuc" class="form-select">
                            <option value="">-- Chọn danh mục --</option>
                            @foreach (var category in ViewBag.Categories)
                            {
                                <option value="@category.IdDanhMuc" selected="@(Model.IdDanhMuc == category.IdDanhMuc)">
                                    @category.TenDanhMuc
                                </option>
                            }
                        </select>
                        <span asp-validation-for="IdDanhMuc" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="GiaGoc" class="form-label fw-bold">Giá gốc</label>
                        <input asp-for="GiaGoc" class="form-control" />
                        <span asp-validation-for="GiaGoc" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="GiaBan" class="form-label fw-bold">Giá bán</label>
                        <input asp-for="GiaBan" class="form-control" />
                        <span asp-validation-for="GiaBan" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SoLuongKho" class="form-label fw-bold">Số lượng kho</label>
                        <input asp-for="SoLuongKho" class="form-control" />
                        <span asp-validation-for="SoLuongKho" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="MoTa" class="form-label fw-bold">Mô tả</label>
                        <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="text-end">
                <button type="submit" class="btn btn-warning">Lưu thay đổi</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>