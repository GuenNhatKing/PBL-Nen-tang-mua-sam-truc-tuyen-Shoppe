@model ShoppeWebApp.ViewModels.Seller.DetailsProductViewModel

@{
    Layout = "~/Areas/Seller/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Xác nhận xóa sản phẩm";
}

<div class="container mt-4">
    <!-- Tiêu đề -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-white p-3" style="background-color: #dc3545; border-radius: 10px;">
            Xác nhận xóa sản phẩm
        </h2>
    </div>

    <!-- Hiển thị thông báo lỗi hoặc cảnh báo -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="p-4 border border-danger rounded" style="background-color: #fdfdfd;">
        <div class="alert alert-warning text-center" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Bạn có chắc chắn muốn xóa sản phẩm này? Hành động này sẽ ẩn sản phẩm khỏi cửa hàng của bạn.
        </div>

        <div class="row mb-4">
            <!-- Ảnh sản phẩm -->
            <div class="col-md-4 text-center">
                <label class="form-label fw-bold">Ảnh sản phẩm</label>
                <div>
                    <img src="@Url.Content("~/" + Model.UrlAnh)" alt="Ảnh sản phẩm" 
                         class="img-thumbnail mb-3 shadow-sm" 
                         style="max-width: 100%; height: auto; max-height: 300px; object-fit: contain;" />
                </div>
            </div>

            <!-- Thông tin chi tiết -->
            <div class="col-md-8">
                <div class="mb-3">
                    <label class="form-label fw-bold">Tên sản phẩm</label>
                    <input type="text" class="form-control" value="@Model.TenSanPham" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Tên danh mục</label>
                    <input type="text" class="form-control" value="@Model.TenDanhMuc" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Giá gốc</label>
                    <input type="text" class="form-control" value="@string.Format("{0:#,##0} ₫", Model.GiaGoc)" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Giá bán</label>
                    <input type="text" class="form-control" value="@string.Format("{0:#,##0} ₫", Model.GiaBan)" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Số lượng kho</label>
                    <input type="text" class="form-control" value="@Model.SoLuongKho" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Số lượng đã bán</label>
                    <input type="text" class="form-control" value="@Model.SoLuongBan" readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Mô tả</label>
                    <textarea class="form-control" readonly style="background-color: #e9ecef; cursor: not-allowed;" rows="3">@Model.MoTa</textarea>
                </div>
            </div>
        </div>

        <!-- Nút xác nhận xóa và hủy -->
        <div class="text-center">
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left me-1"></i> Quay lại
            </a>
            <form asp-action="DeleteConfirmed" method="post" class="d-inline">
                <input type="hidden" name="IdSanPham" value="@Model.IdSanPham" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-1"></i> Xác nhận xóa
                </button>
            </form>
        </div>
    </div>
</div>
