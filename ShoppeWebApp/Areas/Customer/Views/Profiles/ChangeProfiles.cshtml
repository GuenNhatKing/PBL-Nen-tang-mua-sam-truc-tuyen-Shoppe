@model Profiles
@{
	ViewData["Title"] = "Chỉnh sửa thông tin cá nhân";
}
<div class="profiles-edit-container">
	<form asp-action="ChangeProfiles"
		  enctype="multipart/form-data"
		  class="profiles-edit-form">
		<input type="hidden" asp-for="IdNguoiDung" />
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="profiles-edit-avatar-wrapper">
			@if (Model.UrlAnhDaiDien != null)
			{
				<img src="~/images/@Model.UrlAnhDaiDien" class="profiles-edit-avatar" />
			}
			else
			{
				<img src="~/Resource/user.png" class="profiles-edit-avatar" />
			}
		</div>

		<div class="profiles-edit-field">
			<label asp-for="HoVaTen" class="profiles-label">Họ và tên</label>
			<input asp-for="HoVaTen" class="profiles-input" />
			<span asp-validation-for="HoVaTen" class="profiles-error"></span>
		</div>

		<div class="profiles-edit-field">
			<label asp-for="SoDienThoai" class="profiles-label">Số điện thoại</label>
			<input asp-for="SoDienThoai" class="profiles-input" />
			<span asp-validation-for="SoDienThoai" class="profiles-error"></span>
		</div>

		<div class="profiles-edit-field">
			<label asp-for="Email" class="profiles-label">Email</label>
			<input asp-for="Email" class="profiles-input" />
			<span asp-validation-for="Email" class="profiles-error"></span>
		</div>
		<div class="profiles-upload-wrapper">
			<label for="AnhDaiDien" class="control-label">Ảnh đại diện</label>
			<div class="profiles-upload-container">
				<input name="AnhDaiDien" type="file" onchange="readImage(this);" class="form-control" />
				<div class="profiles-preview-cover">
					<img id="uploadedImage" src="#" class="profiles-preview" style="display: none;" />
				</div>
			</div>
		</div>

		<div class="profiles-edit-actions">
			<a asp-controller="Profiles" asp-action="Index"
			   class="profiles-cancel-button">Huỷ</a>
			<input @* type="submit" *@ value="Lưu Thay Đổi" class="profiles-save-button" />
		</div>
	</form>
</div>
